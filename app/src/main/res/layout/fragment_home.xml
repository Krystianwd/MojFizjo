<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Fragment.HomeFragment"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Powiadomienia"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/home_border_style_groups"
            />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/home_border_style"
        >
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/home_textView_plans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="25sp" />
        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/home_button_plans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trenuj"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_200"
            android:background="@drawable/button_style_round"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:background="@drawable/home_border_style"
            >
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/home_textView_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="25sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oznacz jako wykonane"
                android:layout_gravity="center"
                android:backgroundTint="@color/teal_200"
                android:background="@drawable/button_style_round"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:background="@drawable/home_border_style"
            >
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/home_textView_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="25sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oznacz jako wykonane"
                android:layout_gravity="center"
                android:backgroundTint="@color/teal_200"
                android:background="@drawable/button_style_round"
                android:padding="10dp"
                android:layout_marginBottom="12dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Osiągniecia"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:background="@drawable/home_border_style_groups"
            />
        <TextView
            android:id="@+id/home_textView_workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_border_style"
            android:padding="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Trenujesz 13 dni pod rząd!"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/home_textView_steps_amount"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_border_style"
            android:padding="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Wykonałeś w sumie 13 tysięcy kroków!"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/home_textView_water_days_amount"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_border_style"
            android:padding="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Pamietałeś o piciu wody 20 dni pod rząd!"
            android:textSize="25sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
